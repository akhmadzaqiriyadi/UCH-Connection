{
  "name": "uch-connection",
  "version": "1.0.0",
  "description": "Elysia.js project",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.1.28",
    "ioredis": "^5.8.2",
    "nodemailer": "^7.0.12",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.4",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.0.0"
  }
}